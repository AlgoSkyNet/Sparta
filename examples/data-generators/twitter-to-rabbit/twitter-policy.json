{
    "name": "twitter-policy",
    "duration": 10000,
    "saveRawData": "false",
    "checkpointDir": "checkpoint",
    "timePrecision": "minute",
    "checkpointGranularity": "minute",
    "checkpointInterval": 30000,
    "checkpointTimeAvailability": 60000,
    "inputs": [
        {
            "name": "in",
            "elementType": "RabbitMQInput",
            "configuration": {
                "queue": "test",
                "host": "localhost",
                "port": 5672,
                "storageLevel": "MEMORY_ONLY",
                "exchangeName": "twitterExchange",
                "routingKeys" : ["routingKey3"]
            }
        }
    ],
    "dimensions": [
        {
            "dimensionType": "PassthroughDimension",
            "name": "source"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "text"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "lang"
        },
        {
            "dimensionType": "DateTimeDimension",
            "name": "createdAt"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "favoriteCount"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "retweetCount"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "user_followersCount"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "user_favouritesCount"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "user_id"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "user_screenName"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "user_timeZone"
        }
    ],
    "rollups": [
        {
            "dimensionAndPrecision": [
                {
                    "dimensionName": "createdAt",
                    "precision": "minute"
                }
            ],
            "operators": ["count-operator","max-operator"]
        },
        {
            "dimensionAndPrecision": [
                {
                    "dimensionName": "lang",
                    "precision": "identity"
                }
            ],
            "operators": ["count-operator","max-operator"]
        },
        {
            "dimensionAndPrecision": [
                {
                    "dimensionName": "lang",
                    "precision": "identity"
                },
                {
                    "dimensionName": "createdAt",
                    "precision": "minute"
                }
            ],
            "operators": ["count-operator","max-operator"]
        },
        {
            "dimensionAndPrecision": [
                {
                    "dimensionName": "user_timeZone",
                    "precision": "identity"
                }
            ],
            "operators": ["count-operator","max-operator"]
        }
    ],
    "outputs": [
      {
        "name": "out-mongo",
        "elementType": "MongoDbOutput",
        "configuration": {
          "clientUri": "mongodb://localhost:27017",
          "dbName": "sparkta",
          "multiplexer": "false"
        }
      }
    ],
    "operators": [
        {
            "name": "count-operator",
            "elementType": "CountOperator",
            "configuration": {}
        },
        {
            "name": "max-operator",
            "elementType": "MaxOperator",
            "configuration": {
                "inputField" : "user_followersCount"
            }
        }
    ],
    "parsers": [
        {
            "name": "morphline-parser",
            "elementType": "MorphlinesParser",
            "configuration": {
                "morphline": {
                    "id": "morphline1",
                    "importCommands": [
                        "org.kitesdk.**"
                    ],
                    "commands": [
                        {
                            "readJson": {}
                        },
                        {
                            "extractJsonPaths": {
                                "paths": {
                                    "source": "/source",
                                    "createdAt": "/createdAt",
                                    "text": "/text",
                                    "lang": "/lang",
                                    "createdAt": "/createdAt",
                                    "favoriteCount": "/favoriteCount",
                                    "retweetCount": "/retweetCount",
                                    "user_followersCount": "/user/followersCount",
                                    "user_favouritesCount": "/user/favouritesCount",
                                    "user_id": "/user/id",
                                    "user_screenName": "/user/screenName",
                                    "user_timeZone": "/user/timeZone"
                                }
                            }
                        },
                        {
                            "removeFields": {
                                "blacklist": [
                                    "literal:_attachment_body"
                                ]
                            }
                        }
                    ]
                }
            }
        },
        {
            "name": "createdAt",
            "elementType": "DateTimeParser",
            "configuration": {
                "createdAt": "unixMillis"
            }
        }
    ]
}
