{
    "name": "socket-policy",
    "duration": 10000,
    "saveRawData": "false",
    "inputs": [
        {
            "name": "in-socket",
            "elementType": "SocketInput",
            "configuration": {
                "hostname": "localhost",
                "port": 9999,
                "storageLevel": "MEMORY_ONLY"
            }
        }
    ],
    "dimensions": [
        {
            "dimensionType": "PassthroughDimension",
            "name": "word"
        },
        {
            "dimensionType": "PassthroughDimension",
            "name": "wordCount"
        }
    ],
    "rollups": [
        {
            "dimensionAndBucketTypes": [
                {
                    "dimensionName": "word",
                    "bucketType": "identity"
                },
		{
                    "dimensionName": "wordCount",
                    "bucketType": "identity"
                }

            ]
        }
    ],
    "outputs": [
      {
     "name": "out-print",
      "elementType": "PrintOutput",
      "configuration": {}
      }
    ],
    "operators": [
        {
            "name": "count-operator",
            "elementType": "CountOperator",
            "configuration": {}
        }
    ],
    "parsers": [
        {
            "name": "morphline-parser",
            "elementType": "MorphlinesParser",
            "configuration": {
                "morphline": {
                    "id": "morphline1",
                    "importCommands": [
                        "org.kitesdk.**",
                        "com.stratio.ingestion.morphline.**"
                    ],
                    "commands": [
                        {
                            "readJson": {}
                        },
                        {
                            "extractJsonPaths": {
                                "paths": {
                                    "word": "/word",
                                    "wordCount": "/wordCount"
                                }
                            }
                        },
                        {
                            "removeFields": {
                                "blacklist": [
                                    "literal:_attachment_body"
                                ]
                            }
                        }
                    ]
                }
            }
        }
    ]
}
