{
  "name": "OrderLines-demo",
  "id": "124",
  "description": "policy-demo",
  "sparkStreamingWindow": 2000,
  "checkpointPath": "checkpoint",
  "input": {
    "name": "in-kafka",
    "type": "Kafka",
    "configuration": {
      "topics": "demo3",
      "kafkaParams.zookeeper.connect": "localhost:2181",
      "kafkaParams.group.id": "testgroup"
    }
  },
  "transformations": [
    {
      "name": "shopping-center-parser",
      "order": 1,
      "type": "ShoppingCenter",
      "outputFields": [
        "order_id",
        "timestamp",
        "day_time_zone",
        "client_id",
        "payment_method",
        "geo",
        "credit_card",
        "shopping_center",
        "channel",
        "city",
        "country",
        "employee",
        "total_amount",
        "total_products",
        "order_size",
        "product",
        "family",
        "quantity",
        "price"
      ],
      "configuration": {}
    },
    {
      "name": "timestamp-parser",
      "order": 2,
      "type": "DateTime",
      "inputField": "timestamp",
      "outputFields": [
        "timestamp"
      ],
      "configuration": {
        "inputFormat": "autoGenerated"
      }
    }
  ],
  "cubes": [
    {
      "name": "productFamily",
      "checkpointConfig": {
        "timeDimension": "ts",
        "granularity": "day",
        "interval": 30000,
        "timeAvailability": 60000
      },
      "dimensions": [
        {
          "name": "f",
          "field": "family"
        },
        {
          "name": "ts",
          "field": "timestamp",
          "type": "DateTime",
          "precision": "day"
        }
      ],
      "operators": [
        {
          "name": "sum_ta",
          "type": "Sum",
          "configuration": {
            "inputField": "total_amount"
          }
        }
      ]
    },
    {
      "name": "clientProductAndFamily",
      "checkpointConfig": {
        "timeDimension": "minute",
        "granularity": "minute",
        "interval": 30000,
        "timeAvailability": 60000
      },
      "dimensions": [
        {
          "name": "f",
          "field": "family"
        },
        {
          "name": "p",
          "field": "product"
        },
        {
          "name": "ci",
          "field": "client_id"
        }
      ],
      "operators": [
        {
          "name": "count",
          "type": "Count",
          "configuration": {}
        }
      ]
    },
    {
      "name": "productFamilyAndNumberOfProducts",
      "checkpointConfig": {
        "timeDimension": "ts",
        "granularity": "day",
        "interval": 30000,
        "timeAvailability": 60000
      },
      "dimensions": [
        {
          "name": "f",
          "field": "family"
        },
        {
          "name": "p",
          "field": "product"
        }
      ],
      "operators": [
        {
          "name": "count",
          "type": "Count",
          "configuration": {}
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-cassandra",
      "type": "Cassandra",
      "configuration": {
        "connectionHost": "192.168.1.106",
        "connectionPort": "9042",
        "cluster": "Test Cluster",
        "keyspace": "sparkta"
      }
    }
  ]
}