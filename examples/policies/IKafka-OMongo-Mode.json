{
  "name": "policy-kafka",
  "description": "policy-kafka",
  "sparkStreamingWindow": 2000,
  "rawData": {
    "enabled": "true",
    "partitionFormat": "day",
    "path": "myTestParquetPath"
  },
  "checkpointing": {
    "path": "checkpoint",
    "timeDimension": "minute",
    "granularity": "minute",
    "interval": 30000,
    "timeAvailability": 60000
  },
  "inputs": [
    {
      "name": "in-kafka",
      "type": "Kafka",
      "configuration": {
        "topics": "mode",
        "kafkaParams.zookeeper.connect": "localhost:2181",
        "kafkaParams.group.id": "testgroup"
      }
    }
  ],
  "transformations": [
    {
      "name": "morphline-parser",
      "order": 0,
      "type": "Morphlines",
      "outputFields": [
        "name",
        "ccc"
      ],
      "configuration": {
        "morphline": {
          "id": "morphline1",
          "importCommands": [
            "org.kitesdk.**"
          ],
          "commands": [
            {
              "readCSV": {
                "separator": ",",
                "columns": [
                  "name",
                  "ccc"
                ],
                "trim": "true",
                "charset": "UTF-8",
                "quoteChar": "\"",
                "commentPrefix": "#"
              }
            }
          ]
        }
      }
    }
  ],
  "cubes": [
    {
      "name": "modeCube",
      "dimensions": [
        {
          "name": "name",
          "field": "name"
        }
      ],
      "operators": [
        {
          "name": "modeoperator",
          "type": "Mode",
          "configuration": {
            "inputField": "ccc"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-mongo",
      "type": "MongoDb",
      "configuration": {
        "hosts": "localhost",
        "dbName": "sparkta",
        "identitiesSaved": "true",
        "idAsField": "true"
      }
    }
  ]
}