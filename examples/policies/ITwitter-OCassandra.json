{
  "name": "policy-Twitter-Cassandra",
  "sparkStreamingWindow": 6000,
  "rawData": {
    "enabled": "false",
    "partitionFormat": "day",
    "path": "myTestParquetPath"
  },
  "checkpointing": {
    "path": "checkpoint",
    "timeDimension": "minute",
    "granularity": "minute",
    "interval": 30000,
    "timeAvailability": 60000
  },
  "inputs": [
    {
      "name": "in-twitter",
      "type": "Twitter",
      "configuration": {
        "consumerKey": "*****",
        "consumerSecret": "*****",
        "accessToken": "*****",
        "accessTokenSecret": "*****"
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "dimensions": [
        {
          "name": "hastags",
          "field": "status",
          "type": "TwitterStatus",
          "precision": "hastags"
        },
        {
          "name": "firsthastag",
          "field": "status",
          "type": "TwitterStatus",
          "precision": "firsthastag"
        },
        {
          "name": "retweets",
          "field": "status",
          "type": "TwitterStatus",
          "precision": "retweets"
        },
        {
          "name": "userLocation",
          "field": "userLocation"
        },
        {
          "name": "wordsN",
          "field": "wordsN"
        },
        {
          "name": "precision3",
          "field": "geolocation",
          "type": "GeoHash",
          "precision": "precision3"
        },
        {
          "name": "minute",
          "field": "timestamp",
          "type": "DateTime",
          "precision": "minute"
        }
      ],
      "operators": [
        {
          "name": "count-operator",
          "type": "Count",
          "configuration": {}
        },
        {
          "name": "count-distinct-operator",
          "type": "Count",
          "configuration": {
            "distinctFields": "wordsN"
          }
        },
        {
          "name": "sum-operator",
          "type": "Sum",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "name": "max-operator",
          "type": "Max",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "name": "min-operator",
          "type": "Min",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "name": "avg-operator",
          "type": "Avg",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "name": "median-operator",
          "type": "Median",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "name": "variance-operator",
          "type": "Variance",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "name": "stddev-operator",
          "type": "Stddev",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "name": "fullText-operator",
          "type": "FullText",
          "configuration": {
            "inputField": "userLocation"
          }
        },
        {
          "name": "lastValue-operator",
          "type": "LastValue",
          "configuration": {
            "inputField": "retweets"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-cassandra",
      "type": "Cassandra",
      "configuration": {
        "connectionHost": "127.0.0.1",
        "cluster": "Sparkta Cluster",
        "keyspace": "sparkta",
        "class": "SimpleStrategy",
        "replicationFactor": "1",

        "isAutoCalculateId": "false",
        "clusteringPrecisions": "",
        "indexFields": "minute",
        "textIndexFields": "firsthastag:string,userLocation:text,minute:date,avg_wordsn:double,count:long",
        "fieldsSeparator": ",",
        "textIndexFieldsName": "lucene",
        "fixedAggregation": "lucene",
        "refreshSeconds": "1",
        "dateFormat": "yyyy/MM/dd",
        "analyzer": "english"
      }
    }
  ]
}