{
  "name": "policy-kafka-direct",
  "description": "policy-kafka-direct",
  "sparkStreamingWindow": 6000,
  "checkpointPath": "checkpoint",
  "rawData": {
    "enabled": "false",
    "partitionFormat": "day",
    "path": "myTestParquetPath"
  },
  "input":
    {
      "name": "in",
      "type": "KafkaDirect",
      "configuration": {
        "topics": "test",
        "kafkaParams.metadata.broker.list": "localhost:9092",
        "kafkaParams.group.id": "my-spt-grp"
      }
    }
  ,
  "transformations": [
    {
      "name": "morphline",
      "order": 0,
      "outputFields": [
        "message"
      ],
      "type": "Morphlines",
      "configuration": {
        "morphline": {
          "id": "test1",
          "importCommands": [
            "org.kitesdk.**"
          ],
          "commands": [
            {
              "readLine": {
                "charset": "UTF-8"
              }
            }
          ]
        }
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "checkpointConfig": {
        "timeDimension": "minute",
        "granularity": "minute",
        "interval": 30000,
        "timeAvailability": 60000
      },
      "dimensions": [
        {
          "name": "message",
          "field": "message"
        }
      ],
      "operators": [
        {
          "name": "countoperator",
          "type": "Count",
          "configuration": {}
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-elasticsearch",
      "type": "ElasticSearch",
      "configuration": {
        "nodes": "localhost",
        "defaultPort": "9200",
        "isAutoCalculateId": "true",
        "indexMapping": "day"
      }
    }
  ]
}