{
  "name": "policy-kafka-direct",
  "sparkStreamingWindow": 6000,
  "rawData": {
    "enabled": "false",
    "partitionFormat": "day",
    "path": "myTestParquetPath"
  },
  "checkpointing": {
    "path": "checkpoint",
    "timeDimension": "minute",
    "granularity": "minute",
    "interval": 30000,
    "timeAvailability": 60000
  },
  "inputs": [
    {
      "name": "in",
      "type": "KafkaDirect",
      "configuration": {
        "topics": "test:1",
        "kafkaParams.metadata.broker.list": "localhost:9092",
        "kafkaParams.group.id": "my-spt-grp"
      }
    }
  ],
  "transformations": [
    {
      "name": "morphline",
      "order": 0,
      "outputFields": [
        "message"
      ],
      "type": "Morphlines",
      "configuration": {
        "morphline": {
          "id": "test1",
          "importCommands": [
            "org.kitesdk.**"
          ],
          "commands": [
            {
              "readLine": {
                "charset": "UTF-8"
              }
            }
          ]
        }
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "dimensions": [
        {
          "name": "message",
          "field": "message"
        }
      ],
      "operators": [
        {
          "name": "count-operator",
          "type": "Count",
          "configuration": {}
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-print",
      "type": "Print",
      "configuration": {

        "isAutoCalculateId": "true"
      }
    }
  ]
}