{
  "name": "policy-Twitter-Redis-MongoDb",
  "sparkStreamingWindow": 6000,
  "rawData": {
    "enabled": "false",
    "partitionFormat": "day",
    "path": "myTestParquetPath"
  },
  "checkpointing": {
    "path": "checkpoint",
    "timeDimension": "minute",
    "granularity": "minute",
    "interval": 30000,
    "timeAvailability": 60000
  },
  "inputs": [
    {
      "name": "input-twitter",
      "type": "Twitter",
      "configuration": {
        "consumerKey": "*****",
        "consumerSecret": "*****",
        "accessToken": "*****",
        "accessTokenSecret": "*****"
      }
    }
  ],
  "cubes": [
    {
      "name": "twitter",
      "dimensions": [
        {
          "name": "hashtags",
          "field": "status",
          "type": "TwitterStatus",
          "precision": "hashtags"
        },
        {
          "name": "firsthashtag",
          "field": "status",
          "type": "TwitterStatus",
          "precision": "firsthashtag"
        },
        {
          "name": "retweets",
          "field": "status",
          "type": "TwitterStatus",
          "precision": "retweets"
        },
        {
          "name": "userLocation",
          "field": "userLocation"
        },
        {
          "name": "precision3",
          "field": "geolocation",
          "type": "GeoHash",
          "precision": "precision3"
        },
        {
          "name": "minute",
          "field": "timestamp",
          "type": "DateTime",
          "precision": "minute"
        }
      ],
      "operators": [
        {
          "name": "count-operator",
          "type": "Count",
          "configuration": {}
        },
        {
          "name": "count-distinct-operator",
          "type": "Count",
          "configuration": {
            "distinctFields": "wordsN"
          }
        },
        {
          "name": "sum-operator",
          "type": "Sum",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "name": "max-operator",
          "type": "Max",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "name": "min-operator",
          "type": "Min",
          "configuration": {
            "inputField": "wordsN"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-redis",
      "type": "Redis",
      "configuration": {
        "hostname": "localhost",
        "multiplexer": "false"
      }
    },
    {
      "name": "out-mongo",
      "type": "MongoDb",
      "configuration": {
        "clientUri": "mongodb://localhost:27017",
        "dbName": "sparkta",

        "textIndexFields": "userLocation",
        "fieldsSeparator": ",",
        "language": "english"
      }
    }
  ]
}