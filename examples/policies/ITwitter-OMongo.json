{
  "name": "policy-Twitter-MongoDb",
  "sparkStreamingWindow": 6000,
  "rawData": {
    "enabled": "false",
    "partitionFormat": "day",
    "path": "myTestParquetPath"
  },
  "checkpointing": {
    "path": "checkpoint",
    "timeDimension": "minute",
    "granularity": "minute",
    "interval": 30000,
    "timeAvailability": 60000
  },
  "inputs": [
    {
      "name": "in-twitter",
      "type": "Twitter",
      "configuration": {
        "consumerKey": "****",
        "consumerSecret": "****",
        "accessToken": "****",
        "accessTokenSecret": "****",
        "termsOfSearch":"#hekj,prlk,#drm"
      }
    }
  ],
  "fields": [
    {
      "type": "TwitterStatus",
      "name": "status",
      "configuration": {
        "typeOp": "string",
        "hashtags": "int",
        "firsthashtag": "string",
        "retweets": "int",
        "urls": "int"
      }
    },
    {
      "name": "userLocation"
    },
    {
      "name": "wordsN"
    },
    {
      "type": "DateTime",
      "name": "timestamp"
    },
    {
      "type": "GeoHash",
      "name": "geolocation",
      "configuration": {
        "typeOp": "arraydouble"
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "dimensions": [
        {
          "dimension": "status",
          "precision": "hashtags"
        },
        {
          "dimension": "status",
          "precision": "firsthashtag"
        },
        {
          "dimension": "status",
          "precision": "retweets"
        },
        {
          "dimension": "userLocation"
        },
        {
          "dimension": "geolocation",
          "precision": "precision3"
        },
        {
          "dimension": "timestamp",
          "precision": "minute"
        }
      ],
      "operators": [
        {
          "measureName": "count-operator",
          "type": "Count",
          "configuration": {}
        },

        {
          "measureName": "sum-operator",
          "type": "Sum",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "max-operator",
          "type": "Max",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "min-operator",
          "type": "Min",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "avg-operator",
          "type": "Avg",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "median-operator",
          "type": "Median",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "fullText-operator",
          "type": "FullText",
          "configuration": {
            "inputField": "userLocation"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-mongo",
      "type": "MongoDb",
      "configuration": {
        "clientUri": "mongodb://localhost:27017",
        "dbName": "sparkta"
      }
    }
  ]
}