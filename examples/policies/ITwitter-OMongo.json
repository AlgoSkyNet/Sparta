{
  "name": "policy-Twitter-MongoDb",
  "sparkStreamingWindow": 6000,
  "rawData": {
    "enabled": "false",
    "partitionFormat": "day",
    "path": "myTestParquetPath"
  },
  "checkpointing": {
    "path": "checkpoint",
    "timeDimension": "minute",
    "granularity": "minute",
    "interval": 30000,
    "timeAvailability": 60000
  },
  "inputs": [
    {
      "name": "in-twitter",
      "type": "Twitter",
      "configuration": {
        "consumerKey": "*****",
        "consumerSecret": "*****",
        "accessToken": "*****",
        "accessTokenSecret": "*****"
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "dimensions": [
        {
          "name": "hastags",
          "field": "status",
          "type": "TwitterStatus",
          "precision": "hastags"
        },
        {
          "name": "firsthastag",
          "field": "status",
          "type": "TwitterStatus",
          "precision": "firsthastag"
        },
        {
          "name": "retweets",
          "field": "status",
          "type": "TwitterStatus",
          "precision": "retweets"
        },
        {
          "name": "userLocation",
          "field": "userLocation"
        },
        {
          "name": "wordsN",
          "field": "wordsN"
        },
        {
          "name": "precision3",
          "field": "geolocation",
          "type": "GeoHash",
          "precision": "precision3"
        },
        {
          "name": "minute",
          "field": "timestamp",
          "type": "DateTime",
          "precision": "minute"
        }
      ],
      "operators": [
        {
          "measureName": "count-operator",
          "type": "Count",
          "configuration": {}
        },
        {
          "measureName": "count-distinct-operator",
          "type": "Count",
          "configuration": {
            "distinctFields": "wordsN"
          }
        },
        {
          "measureName": "sum-operator",
          "type": "Sum",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "max-operator",
          "type": "Max",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "min-operator",
          "type": "Min",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "avg-operator",
          "type": "Avg",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "median-operator",
          "type": "Median",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "variance-operator",
          "type": "Variance",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "stddev-operator",
          "type": "Stddev",
          "configuration": {
            "inputField": "wordsN"
          }
        },
        {
          "measureName": "fullText-operator",
          "type": "FullText",
          "configuration": {
            "inputField": "userLocation"
          }
        },
        {
          "measureName": "lastValue-operator",
          "type": "LastValue",
          "configuration": {
            "inputField": "retweets"
          }
        },
        {
          "measureName": "accumulator-operator",
          "type": "Accumulator",
          "configuration": {
            "inputField": "wordsN"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-mongo",
      "elementType": "MongoDb",
      "configuration": {
        "clientUri": "mongodb://localhost:27017",
        "dbName": "sparkta",
        "multiplexer": "false",
        "textIndexFields": "userLocation",
        "fieldsSeparator": ",",
        "language": "english"
      }
    }
  ]
}
